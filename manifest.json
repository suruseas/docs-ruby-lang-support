{
  "manifest_version": 3,
  "name": "Ruby sample code assistant",
  "description": "Ruby 3.2 リファレンスマニュアル(るりま)に掲載のサンプルコードをRuby Wasmを使って実行させることができます。",
  "version": "1.4.1",
  "icons": {
    "16": "src/images/icon16.png",
    "48": "src/images/icon48.png",
    "128": "src/images/icon128.png"
  },
  "content_scripts": [
    {
      "js": [
        "dist/content.js"
      ],
      "css": [
        "dist/content.css"
      ],
      "matches": [
        "https://docs.ruby-lang.org/ja/3.2/*",
        "https://docs.ruby-lang.org/ja/latest/*"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "https://docs.ruby-lang.org/*"
      ],
      "resources": [
        "node_modules/ruby-3_2-wasm-wasi/dist/**",
        "src/images/icon16.png"
      ]
    }
  ]
}
